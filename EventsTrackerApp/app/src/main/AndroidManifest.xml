<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eventstrackerapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.carpool.GlobalCarpoolList.GlobalCarpoolListActivity"
            android:label="@string/title_activity_global_carpool_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ui.carpool.YourCarpoolList.YourCarpoolListActivity"
            android:label="@string/title_activity_your_carpool_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.calendar.CalendarActivity" />
        <activity android:name=".ui.home.upcoming.UpcomingEvents" />
        <activity android:name=".ui.home.upcoming.details.EventDetailsHostActivity" />
        <activity android:name=".ui.home.upcoming.details.EventDetailsActivity" />
        <activity android:name=".ui.carpool.CampusCarpoolActivity" />
        <activity android:name=".profile.ProfileActivity" />
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".authentication.SignUpActivity" />
        <activity android:name=".authentication.LoginActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>