<?xml version="1.0" encoding="utf-8"?>
<set
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- duration: How long the animation lasts -->
    <!-- fromDegrees:"-1" How far to spin left -->
    <!-- fromDegrees:"1" How far to spin right -->
    <!-- pivotX: pivot from horizontal center -->
    <!-- pivotY: pivot from vertical center -->
    <!-- repeatCount: how many times to swing back and forth -->


    <scale
        android:duration="2000"
        android:fromXScale="0.3"
        android:toXScale="1.0"
        android:fromYScale="0.3"
        android:toYScale="1.0"
        android:pivotX="50%"
        android:pivotY="50%" />
</set>