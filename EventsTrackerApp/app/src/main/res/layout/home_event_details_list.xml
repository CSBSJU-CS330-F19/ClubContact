<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorDarkGray"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/home_event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@color/colorLightBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="3dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:id="@+id/home_event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:   "
        android:textSize="16dp"
        android:textStyle="italic"
        android:textColor="@color/colorLightBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_event_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/home_event_clubs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Club(s):   "
        android:textSize="16dp"
        android:textStyle="italic"
        android:textColor="@color/colorLightBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_event_location"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/home_event_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starting Time/Date:   "
        android:textSize="16dp"
        android:textStyle="italic"
        android:textColor="@color/colorLightBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_event_clubs"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/home_event_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ending Time/Date:   "
        android:textSize="16dp"
        android:textStyle="italic"
        android:textColor="@color/colorLightBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_event_start"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>